<%- model_class = Boot -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:color) %>:</strong></dt>
  <dd><%= @boot.color %></dd>
  <dt><strong><%= model_class.human_attribute_name(:style) %>:</strong></dt>
  <dd><%= @boot.style %></dd>
  <dt><strong><%= model_class.human_attribute_name(:gender) %>:</strong></dt>
  <dd><%= @boot.gender %></dd>
  <dt><strong><%= model_class.human_attribute_name(:size) %>:</strong></dt>
  <dd><%= @boot.size %></dd>
  <dt><strong><%= model_class.human_attribute_name(:clay_type) %>:</strong></dt>
  <dd><%= @boot.clay_type %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              boots_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_boot_path(@boot), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              boot_path(@boot),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
